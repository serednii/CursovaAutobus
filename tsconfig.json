{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "@mui/*": ["node_modules/@mui/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "zod_shema",
    "app/[locale]/api/testuser",
    "app/[locale]/(passenger)/layout.tuysx",
    "app/i18n.js",
    "components/LanguageChanger.jsx",
    "app/[locale]/(driver)/createroute/[id]/[type]/page.jsx"
  ],
  "exclude": ["node_modules"]
}
